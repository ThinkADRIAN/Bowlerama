<p>
	<%= link_to 'Bowl', bowl_game_path(@game), class: "btn btn-xs btn-link", :method => :put, class: "btn btn-success" %>
  <%= link_to 'Reset', reset_game_path(@game), class: "btn btn-xs btn-link", :method => :put, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
</p>

<p>
  <strong>Current frame:</strong>
  <%= if @game.frame_stroke == -1
        "Game Over"
      else
        @game.current_frame
      end %>
</p>

<p>
  <strong>Frame stroke:</strong>
  <%= if @game.frame_stroke == -1
        "-"
      else
        @game.frame_stroke
      end %>
</p>

<p>
  <strong>Total score:</strong>
  <%= @game.total_score %>
</p>

<h1>Score Card</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Frame number</th>
      <th>First stroke</th>
      <th>Second stroke</th>
      <th>Extra stroke</th>
      <th>Frame score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game.frames.each do |frame| %>
      <tr>
        <td><%= frame.frame_number %></td>
        <td><%= frame.first_stroke %></td>
        <td><%= frame.second_stroke %></td>
        <td><%= frame.extra_stroke %></td>
        <td><%= frame.frame_score %></td>
      </tr>
    <% end %>
  </tbody>
</table>
